"use client";
import React, { useEffect, useState } from "react";

type Worker = { id: string; nombre: string; email?: string; activo: boolean };
const K = "turnos_trabajadores_v1";

export default function TrabajadoresPage() {
  const [items, setItems] = useState<Worker[]>([]);
  const [nombre, setNombre] = useState("");

  useEffect(() => { try { const raw = localStorage.getItem(K); if (raw) setItems(JSON.parse(raw)); } catch {} }, []);
  useEffect(() => { try { localStorage.setItem(K, JSON.stringify(items)); } catch {} }, [items]);

  const add = () => {
    if (!nombre.trim()) return;
    setItems([{ id: crypto.randomUUID(), nombre: nombre.trim(), activo: true }, ...items]);
    setNombre("");
  };

  return (
    <div style={{ fontFamily: "system-ui", color: "#e5e7eb", background: "#0b1220", minHeight: "100vh", padding: "2rem" }}>
      <h1>Trabajadores</h1>
      <div>
        <input value={nombre} onChange={(e)=>setNombre(e.target.value)} placeholder="Nombre"
               style={{ padding: 10, borderRadius: 8, border: "1px solid #1f2937", marginRight: 8 }} />
        <button onClick={add} style={{ background: "#0ea5e9", color: "white", padding: "10px 16px", border: "none", borderRadius: 8, cursor: "pointer" }}>
          AÃ±adir
        </button>
        <a href="/" style={{ marginLeft: 10, color: "#0ea5e9" }}>Volver a inicio</a>
      </div>

      <ul style={{ marginTop: 16, padding: 0, listStyle: "none" }}>
        {items.map(w => (
          <li key={w.id} style={{ background: "#111827", border: "1px solid #1f2937", borderRadius: 12, padding: 12, marginBottom: 10 }}>
            {w.nombre}
          </li>
        ))}
      </ul>
    </div>
  );
}
